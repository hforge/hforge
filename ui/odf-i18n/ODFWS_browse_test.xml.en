<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">
  <dl>
    <dt>Title:</dt>
    <dd>${title}</dd>
    <br />
    <dt>Description:</dt>
    <dd>
      <table border="0" cellspacing="0" cellpadding="0">
        <tbody>
          <tr>
            <td id="odf_description" valign="top">
              ${description}
            </td>
          </tr>
        </tbody>
      </table>
    </dd>
    <br />
    <dt>Files:</dt>
    <dd>
      <stl:block stl:repeat="file content">
        <a href="${file/to_child}">${file/child_name}</a>
        <stl:inline stl:if="file/view">(<a href="${file/view}">View</a>)
        </stl:inline><br />
      </stl:block>
    </dd>
    <br />
    <dt>Reference:</dt>
    <dd>
      <stl:block stl:if="url_reference">
        <a href="${url_reference}">${reference}</a>
      </stl:block>
      <stl:block stl:if="not url_reference">
        ${reference}
      </stl:block>
    </dd>
  </dl>
</stl:block>
