<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">
  <dl>
    <dt>Files:</dt>
    <dd>
      <p stl:repeat="file content">
        <stl:inline stl:if="not file/view">
          Input: <a href="${file/to_child}">${file/child_name}</a>
        </stl:inline>
        <stl:inline stl:if="file/view">
          Output: <a href="${file/to_child}">${file/child_name}</a>
          (<a href="${file/view}">View</a>)
        </stl:inline>
      </p>
    </dd>
  </dl>
</stl:block>
